@model IEnumerable<HMS_ITI.Models.Employee>
@{
    ViewBag.Title = "الموظفين";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
@*<a href="#" onclick="return getbyID(' + item.EmployeeID + ')">Edit</a> | <a href="#" onclick="Delele(' + item.EmployeeID + ')">Delete</a>*@


<div class="row" style="text-align:center">
    <span class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma;font-size:18px;padding:5px 30px;">الموظفين</span>
</div>
<br />


<style>

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #c2d4c4;
    }

    #add {
        color: #00887a;
    }

        #add:hover,
        #add:active,
        #add:focus {
            color: green;
        }

    #edit {
        color: #00887a;
    }

        #edit:hover,
        #edit:active,
        #edit:focus {
            color: blue;
        }

    #delete {
        color: #00887a;
    }

        #delete:hover,
        #delete:active,
        #delete:focus {
            color: red;
        }
    #det {
        color: #00887a;
    }

        #det:hover,
        #det:active,
        #det:focus {
            color: forestgreen;
        }
</style>


<div style="float:left">
    @Html.ActionLink(" ", "AddEmp", null, htmlAttributes: new { @class = "btn btn-outline-primary btn-bg glyphicon glyphicon-plus", style = "font-size:18px", id = "add" })
</div>
<div style="float:none"></div>

<table class="table table-hover table-striped table-responsive">
    <tr style="background-color: #c2d4c4">

        <th>
            <b>الاسم بالكامل</b>
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Career.CareerType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
        <th></th>
    </tr>
    <tbody id="DataSearching">
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.SecondName) @Html.DisplayFor(modelItem => item.ThirdName)   @Html.DisplayFor(modelItem => item.FourthName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Career.CareerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.DepartmentName)
            </td>
            
            <td style="text-align:center">
                @Html.ActionLink(" ", "Details", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-primary btn-sm glyphicon glyphicon-list-alt", id = "det" })
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-primary btn-sm glyphicon glyphicon-pencil", id = "edit" })
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-danger btn-sm glyphicon glyphicon-trash", @onclick = "return confirm('Are you sure !')", id = "delete" })
            </td>
        </tr>
        }
    </tbody>
</table>