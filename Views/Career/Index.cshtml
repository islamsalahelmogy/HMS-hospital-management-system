@model IEnumerable<HMS_ITI.Models.Career>

@{
    ViewBag.Title = "الوظائف";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row" style="text-align:center">
    <span class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma;font-size:16px;padding:5px 30px;">عرض الوظائف</span>
</div>

<style>

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #c2d4c4;
    }

    #add {
        color: #00887a;
    }

        #add:hover,
        #add:active,
        #add:focus {
            color: green;
        }

    #edit {
        color: #00887a;
    }

        #edit:hover,
        #edit:active,
        #edit:focus {
            color: blue;
        }

    #delete {
        color: #00887a;
    }

        #delete:hover,
        #delete:active,
        #delete:focus {
            color: red;
        }
</style>
<br />
