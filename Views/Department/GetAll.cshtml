@model IEnumerable<HMS_ITI.Models.Department>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row" style="text-align:center">
    <span class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma;font-size:18px;padding:5px 30px;">الأقسام</span>
</div>
<br />

<input type="button" class="btn btn-success" value="ادخال قسم جديد" onclick="location.href= '@Url.Action("AddDept","Department") '" />
<br />
<br />
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


