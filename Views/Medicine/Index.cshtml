@model IEnumerable<HMS_ITI.Models.Medicine>
@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}




<style>

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #c2d4c4;
    }

    #add {
        color: #00887a;
    }
        #add:hover,
        #add:active,
        #add:focus {
            color: green;
        }
    #edit {
        color: #00887a;
    }

        #edit:hover,
        #edit:active,
        #edit:focus {
            color: blue;
        }
    #delete {
        color: #00887a;
    }

        #delete:hover,
        #delete:active,
        #delete:focus {
            color: red;
        }
</style>



<div class="row" style="text-align:center ">
    <span class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma;font-size:18px;padding:5px 30px; background-color:#00887a">الادويـــــــة</span>
</div>

<div style="float:left">
    @Html.ActionLink(" ", "Add", null, htmlAttributes: new { @class = "btn btn-outline-primary btn-bg glyphicon glyphicon-plus" , style = "font-size:18px" ,id="add" })
</div>
<div style="float:none"></div>

<table class="table table-hover table-striped table-responsive" style="text-align:center ">
    <tr style="background-color: #c2d4c4">
        <th style="text-align:center ">
            @Html.DisplayNameFor(model => model.IDMedicin)
        </th>
        <th style="text-align:center ">
            @Html.DisplayNameFor(model => model.MedNameEnglish)
        </th>
        <th style="text-align:center ">
            @Html.DisplayNameFor(model => model.CompanyId)
        </th>
        <th style="text-align:center ">
            @Html.DisplayNameFor(model => model.ShapeId)
        </th>
        <th style="text-align:center ">
            @Html.DisplayNameFor(model => model.PartGroupId)
        </th>
        <th></th>
    </tr>
    <tbody id="DataSearching">
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDMedicin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedNameEnglish)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Medicine_Company.Name_Company)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Medicine_Shape.Name_English)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Part_Group_Medicine.NameEnglish)
            </td>
            <td style="text-align:center">
                @Html.ActionLink(" ", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-primary btn-sm glyphicon glyphicon-pencil" ,id = "edit" }) 
                @Html.ActionLink(" ", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-danger btn-sm glyphicon glyphicon-trash", @onclick = "return confirm('Are you sure !')", id = "delete" })
            </td>
        </tr>
        }
    </tbody>
</table>


