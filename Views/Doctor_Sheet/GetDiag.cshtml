@model HMS_ITI.Models.Diagnosis


@{
    var dig = (IEnumerable<HMS_ITI.Models.Diagnosis>)ViewBag.dig;
}

<style>

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #c2d4c4;
    }


    #delete {
        color: #00887a;
    }

        #delete:hover,
        #delete:active,
        #delete:focus {
            color: red;
        }

    td, th {
        text-align: center
    }
</style>





@using (Html.BeginForm("Diag", "Doctor_Sheet", FormMethod.Post, new { autocomplete = "off" }))
{
    <div class="panel panel-flat">
        <div class="panel-heading">
            <div class="heading-elements">
            </div>
        </div>
        <div class="panel-body">
            
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(ww => ww._Diagnosis, htmlAttributes: new { @class = "control-label col-sm-12" })
                    @Html.TextAreaFor(model => model._Diagnosis, htmlAttributes: new { @class = "control-label col-sm-12", rows = "10", cols = "200", placeholder = "اكتب تشخيصك هنا", style = "resize:none" })
                    <b>
                        @Html.ValidationMessageFor(model => model._Diagnosis, "", new { @class = "text-danger" })
                    </b>
                </div>
            </div>
            <div class="form-group">
                <div class="text-right col-lg-12">
                    <button type="submit" class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma">اضافة <i class=" icon-arrow-left13 position-right"></i></button>
                </div>
            </div>
        </div>
    </div>
}






<table class="table table-hover table-striped table-responsive">
    <tr style="background-color: #c2d4c4">
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model._Diagnosis)
        </th>
        <th></th>
    </tr>

    @foreach (var item in dig)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._Diagnosis)
            </td>
            <td>
                @Html.ActionLink(" ", "DeleteDig", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-danger btn-sm glyphicon glyphicon-trash", @onclick = "return confirm('Are you sure !')", id = "delete" })
            </td>
        </tr>
    }

</table>
