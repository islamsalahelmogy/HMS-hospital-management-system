@model  IEnumerable<HMS_ITI.Models.Contact>

@{
    ViewBag.Title = "DisplayContactMessage";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="row" style="text-align:center ">
    <span class="panel-title btn btn-info" style="color:#fff;font-family:Tahoma;font-size:18px;padding:5px 30px; background-color:#00887a">عرض الرسايل</span>
</div>
<br />
<br />
<table class="table table-hover table-striped table-responsive" style="text-align:center ">
    <tr style="background-color: #c2d4c4 ;text-align:center">
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th></th>
    </tr>
    <tbody id="DataSearching">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink(" ", "DeleteContact", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-outline-danger btn-sm glyphicon glyphicon-trash", @onclick = "return confirm('Are you sure !')", id = "delete" })
                </td>
            </tr>
        }
    </tbody>
</table>